        li.how__item.how__item--third
            picture.how__frame
                source(media="(min-width: 1440px)" srcset="static/images/content/how-3-lg.webp" type="image/webp")
                source(media="(min-width: 1440px)" srcset="static/images/content/how-3-lg.jpg")
                source(srcset="static/images/content/how-3-mb.webp" type="image/webp")
