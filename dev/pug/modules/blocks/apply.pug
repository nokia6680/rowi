section.apply#apply-form
    .apply__wrapper
        h2.apply__title Ждём тебя
        
        form(method="get" action="" id="applyForm").apply__form.form
            ul.form__list
                li.form__item
                    label(for="phone-mail").form__label
                    input(type="text" name="contact" id="phone-mail" placeholder="Телефон или электронная почта*" required).form__input
                    span.form__error.form__error--mail
                li.form__item
                    input(type="file" name="cv-file" id="file-input" accept=".pdf, .doc, docx").form__file
                    label(for="file-input").form__label Есть резюме? Кидай!
                    span.form__rules PDF или Microsoft Word
                    span.form__error.form__error--file Можно прикреплять файлы в форматах: .pdf, .doc или .docx
                    
                    .form__upload
                        span.form__upload-name
                        button(type="reset").form__upload-delete
                li.form__item
                    label(for="url").form__label
                    input(type="url" name="url" id="url" placeholder="Можно вставить ссылку").form__input
                    span.form__error.form__error--url
            button(type="submit").form__submit
                span Отправить
                //svg
        
        .apply__images
            picture.apply__frame
                source(media="(min-width: 1440px)" srcset="static/images/content/apply-1-lg.webp" type="image/webp")
                source(media="(min-width: 1440px)" srcset="static/images/content/apply-1-lg.jpg")
                source(media="(min-width: 1024px)" srcset="static/images/content/apply-1-md.webp" type="image/webp")
                source(media="(min-width: 1024px)" srcset="static/images/content/apply-1-md.jpg")
                source(media="(min-width: 768px)" srcset="static/images/content/apply-1-tb.webp" type="image/webp")
                source(media="(min-width: 768px)" srcset="static/images/content/apply-1-tb.jpg")
                source(srcset="static/images/content/apply-1.webp" type="image/webp")
                img(src="static/images/content/apply-1.jpg" alt="Работай с нами").apply__frame-image
            // svg    
            picture.apply__frame
                source(srcset="static/images/content/apply-2.webp" type="image/webp")
                img(src="static/images/content/apply-2.jpg" alt="Работай с нами").apply__frame-image
