        .popup-video
            .popup-video__wrapper
                button(type="button").popup-video__closer Закрыть
                
                .popup-video__player
                    video.popup-video__content#benVideo
                        source(src="static/videos/benefits-video.mp4" type="video/mp4")
                        source(src="static/videos/benefits-video.webm" type="video/webm")
                    button(type="button").popup-video__play
        .job__dropdown.job__dropdown--mobile
            .job__dropdown-wrap
                ul.job__dropdown-list
                    li.job__dropdown-item
                        button(type="button" data-value="tg").job__dropdown-btn Telegram
                    li.job__dropdown-item
                        button(type="button" data-value="fb").job__dropdown-btn Facebook
                    li.job__dropdown-item
                        button(type="button" data-value="tw").job__dropdown-btn Twitter
                    li.job__dropdown-item
                        button(type="button" data-value="vk").job__dropdown-btn VK
                    li.job__dropdown-item
